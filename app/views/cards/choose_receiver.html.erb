<h2> Choose Friend to send card</h2><br><br>
<% @friends.each do |f| %>
	<%= link_to f.name, params.merge(:receiver_id => f.id) %> <br>
<% end %>

<h5> Send via Email </h5>
<%= form_tag new_user_card_path, method: :get do %>
  <%= label_tag(:receiver_email, "Receiver Email") %>
  <%= text_field_tag(:receiver_email) %>
  <%= hidden_field_tag(:item_id, params[:item_id]) %>
  <%= submit_tag("Send via Email") %>
<% end %>



