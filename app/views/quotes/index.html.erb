<%= render 'shared/userhead' %>

<div class="row">
<% if @user == current_user %>
	<div class="span8">
<% else %>
	<div class="span12 ">
<% end %>
<div class = "memes">
	<h5> All Quotes </h5>
	<ul class = "memes">
		<%= render @quotes %>
	</ul>
</div>
</div>
<% if @user == current_user %>
	<div class="span4 ">

		<%= form_for [@user, @quote] do |f| %>
		 	<%= render 'shared/error_messages', object: f.object %>
		 	<div><%= f.hidden_field :id %></div>
		 	<div class = "pull-right">
		    <div class = "field">
			  	<%= f.label :body %>		
		      	<%= f.text_area :body %>
			  	<%= f.label :author %>		
		      	<%= f.text_field :author %>      	
		    </div>
		    <%= f.submit "Add", class: "btn btn-large btn-primary pull-right" %>
		    </div>
		<% end %>		
	</div>
<% end %>	
</div>

