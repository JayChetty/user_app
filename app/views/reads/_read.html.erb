<li>
	<div class="row">
	<div class="span1">	
	<% if read.image_url %>
		<%= link_to image_tag(read.image_url), read.url, :target => "_blank"  %>
	<% end %>
    </div>
	<div class="span6">
	<%= link_to read.title.html_safe, read.url, :target => "_blank"  %> <br>
    <%= read.author.html_safe %> <br>    
    <br>
	<%= link_to "Stirred", user_shelf_read_feelings_path(current_user, @shelf, read), method: "post"%> 
		 
	</div>
	
    <% if @user == current_user %>
	    <%= link_to "Delete", [current_user, @shelf, read] , method: :delete, data: { confirm: "You sure?" }, class: "pull-right" %> <br> 	     
	<% end %>



	</div>
</li>
