<li>
	<div class="row">
	<div class="span1">	
	<% if read.image_url %>
		<%= link_to image_tag(read.image_url), read.url  %>
	<% end %>
    </div>
	<div class="span6">
	<%= link_to read.title.html_safe, read.url  %> <br>
    <%= read.author.html_safe %> <br>    
    <br>
    <% if @user == current_user %>
	    <%= link_to "Delete", [current_user, @shelf, read] , method: :delete, data: { confirm: "You sure?" }%>

	<% end %>
	</div>
	</div>
</li>
