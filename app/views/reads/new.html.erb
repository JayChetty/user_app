<%= render 'shared/userhead' %>
<div class="container">
	<div class="row">

      <%= render 'shared/shelves_sidebar' %>	

	  <div class="span9">

			<h4>New Read</h4>
			<%= form_tag(new_user_shelf_read_path, method: "get" ) do %>
			  <%= label_tag(:author, "Author") %>
			  <%= text_field_tag :author , params[:author]%>  		
			  <%= label_tag(:title, "Title") %>
			  <%= text_field_tag :title, params[:title] %>
			  <br>
			  <%= submit_tag("Find",  class: "btn") %>

			<% end %>

			<% if @books && @books.any? %>
				<ul class = "reads">
					<% @books.each do |book| %>
						<li>
					    	<div class="row">
								<div class="span1">	
							  	<% if book.get("SmallImage/URL") %>
								<%= link_to image_tag(book.get("SmallImage/URL")), book.get("DetailPageURL")  %>
								<% end %>
							    </div>
								<div class="span6">
								<%= link_to book.get('ItemAttributes/Title'), book.get("DetailPageURL")  %><br>
								<%= book.get('ItemAttributes/Author') %><br>
									

								<%= link_to "Add Read to Shelf", user_shelf_reads_path(@shelf, book_isbn: book.get('ItemAttributes/ISBN') ,book_author: book.get('ItemAttributes/Author'), book_title: book.get('ItemAttributes/Title'), book_image_url: book.get("SmallImage/URL"),  url: book.get("DetailPageURL")),
								    method: "post" if current_user %>
								</div>
							</div>
						</li>
					<% end %>	
				</ul>	
			<% end %>

	  </div>

	</div> 
</div> 
